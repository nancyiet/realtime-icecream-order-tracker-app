<section class="cart py-16">
  <% if(session.cart){%>
  <div class="order container mx-auto w-1/2">
 <div class="flex items-center border-b border-gray-300 pb-4">
   <img src="/img/cart.png" alt="cart" style="width: 40px;"/>
   <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
 </div>
 <div class="items-list">
   <% for(let icecream of Object.values(session.cart.items)){ %>
    <div  class="flex items-center my-8">
      <img src="<%=icecream.item.image%>" alt="<%=icecream.item.name%>" class="w-24"/>
      <div class="ml-4 flex-1">
        <h1><%=icecream.item.name%></h1>
        <span><%=icecream.item.size%></span>
      </div>
      <span class="flex-1"><%=icecream.qty%> Pcs</span>
      <span class="font-bold text-lg"><%=icecream.item.price%>$</span>
    </div>
    <%}%>
 </div>
 <hr>
 <div class="text-right py-4">
   <div>
     <span class="text-lg font-bold">Total Amount:</span>
     <span class="amount text-2xl font-bold ml-2"><%=session.cart.totalPrice%>$</span>
   </div>
   <div>
    <%if(user){%>
     <form action="/orders" method="POST" class="mt-12" id="payment">
      <div class="relative w-1/2 ml-auto mb-4">
        <select id="paymentType" name="paymentType" class="block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded leading-tight focus:outline-none focus:shadow-outline">
          
          <option value="cod">Cash on delivery</option>
          <option value="card">Card payment</option>
        </select>
        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
          <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
        </div>
      </div>
      
       <input name="address" class="border border-gray-400 p-2 w-1/2 mb-4" type="text" placeholder="address">
       <input name="phone" class="border border-gray-400 p-2 w-1/2 mb-4" type="text" placeholder="phone number">
      <div>
        <div id="card-element"></div>
       <button type="submit" class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Order Now</button>
      </div> 
      </form>
      <%}else{%>
     <a href="/login" class="inline-block btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Login to continue</a><%}%>
   </div>
 </div>
  </div>
  <%} else{%>
    <div class="container mx-auto text-center emptycart">
      <h1 class="text-3xl font-bold mb-3"> Cart Empty</h1>
      <p class="text-gray-500 text-lg mb-12">You probably have not ordered a icecream yet.
        <br>  To order a icecream go to the home page
      </p>
      <img src="/img/empty-cart.png" alt="empty cart" class="mx-auto" />
      <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go back</a>
       </div>
   
    <%}%>
</section>